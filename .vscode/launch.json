{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            // Specifies which file to debug - ${file} is a VS Code variable that represents
            // the currently active file in the editor. This means the debugger will run
            // whatever file you have open and selected when you start debugging.
            "program": "${file}",
            // Add the workspace folder to Python path so imports work correctly
            "env": {
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"
            },
            // "console": "integratedTerminal",
            "console": "internalConsole",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Python: Kedro Run",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "kedro",
            "args": ["run"]
            // Any other arguments should be passed as a comma-seperated-list
            // e.g "args": ["run", "--pipeline", "pipeline_name"]
        }
    ]
}